%h1.what_is_new= translate :what_is_new
%div.what_is_new
  %ul
    - temp_page_counter = 0  # counter to avoid iterations within the following select block:
    - for page in Page.order('created_at DESC').limit(30).select { |page| (temp_page_counter += 1) <= 5 && can?(:read, page) }.first(5)
      %li
        %strong>= link_to (page.title.present? ? page.title : translate(:untitled)), page
        , 
        = localize page.created_at.to_date