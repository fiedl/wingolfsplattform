%div.post-quote
  %div.post-header
    %div.post-author-and-date
      %span.post-author
        - if post.author.kind_of? User
          = link_to post.author.title, post.author
        - if post.author.kind_of? String
          = post.author
        = ", "
      %span.post-date
        = localize(post.sent_at)
    %div.post-subject
      = link_to post.subject, post
  %div.post-body
    = truncate(post.text, length: 100, separator: " ").html_safe
