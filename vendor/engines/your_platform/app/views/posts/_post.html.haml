%div.post
  %div.post-header
    %div.post-author
      - if post.author.kind_of? User
        = link_to post.author.title, post.author
      - if post.author.kind_of? String
        = post.author
    %div.post-date
      = localize(post.sent_at)
    %div.post-subject
      = post.subject
  %div.post-body
    = post.text.html_safe
