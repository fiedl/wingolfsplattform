<h1><%= best_in_place @page, :title %></h1>
<div>
  <%= best_in_place @page, :content, type: 'textarea', sanitize: false %>
</div>

<h1><%=t :attachments %></h1>
<div class="attachments">
  <ul class="attachments">
    <% for attachment in @page.attachments %>
      <li>
	<%= image_tag attachment.file_url( :thumb ).to_s %>
	<%= link_to attachment.title, attachment.file.url %> <%= remove_button attachment %><br />
	<%= attachment.description %><br />
      </li>
    <% end %>
  </ul>
  <div class="add_attachment show_only_in_edit_mode">
    <h2><%=t :add_attachment %></h2>

    <%= semantic_form_for @page.attachments.build, multipart: true do |f| %>
      <%= f.inputs do %>
        <%= f.hidden_field :parent_id %>
        <%= f.hidden_field :parent_type %>
        <p>
	  <%= f.input :title %>
	  <%= f.input :description, as: :string %>
          <%= f.input :file, as: :file %>
        </p>
      <% end %>
      <%= f.actions %>
    <% end %>

  </div>
</div>
