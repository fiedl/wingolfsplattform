<div class="edit_mode_group">
  <div class="box <%= box_class %>">
    <%=h content_tag( :div, "", class: "minimize", title: t( :fold_box ) ) %>
    <div class="head">
      <table><tr>
	  <td class="box_heading">
	    <h1><%= heading %></h1>	    
	  </td>
	  <td class="box_toolbar">
	    <span class="box_toolbar">
	      <%= cancel_button %>
              <%= save_button %>
	      <%= edit_button :id => (strip_tags(heading) + "EditButton") %>
	    </span>
	  </td>
      </tr></table>
    </div>
    <div class="divider"></div>
    <div class="content">
      <%= content %>
    </div>
  </div>
</div>
