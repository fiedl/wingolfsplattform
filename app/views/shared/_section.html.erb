<div id="section_<%= section %>">
  <% @user.profile_fields_by_section(section).each do |profile_field| %>
      <%= render partial: 'shared/profile_field', object: profile_field %>
  <% end %>
  <% type_or_types = @user.profile_field_type_by_section(section)  %>
  <%= add_button({ :action => :create_profile_field, :user_id => @user.id, :type => type_or_types, :section => section }) unless type_or_types.kind_of? Array %>
</div>
