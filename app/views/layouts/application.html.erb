<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8" >
  <title><%=h "#{@title} - " if @title %>Bl√∂dsinn</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <% %w(global).each do |file_title|
    concat stylesheet_link_tag file_title, :media => "screen"
  end #jquery.fancybox-1.3.4 jquery-ui-1.8.16.custom datatables/jquery.dataTables_themeroller global backend %>

</head>
<body class="<%= controller.controller_name %>">

  <div id="backendBar">
    <div class="content">
      <ul>
        <li class="first">Angemeldeter Benutzer</li>
        <li>Menu</li>
        <li class="last">Abmelden</li>
      </div>
      <div class="clear"></div>
    </div>
  </div>
  
  <div id="headerBg">
    <div id="header">
      <div id="header_claim">
	<%= image_tag( '../images/claim.png' ) %>
      </div>
      <div id="header_logo">
	<%= image_tag( '../images/logo.png' ) %>
      </div>
      <div id="header_search">
	Suche
      </div>
      <div id="header_navi">
        <ul>
          <li class="active"><a>Horizontale Navigation</a></li>
        </ul>
      </div>
    </div>
  </div>

  <div id="contentBgLayer1">
    <div id="contentBgLayer2">
      <div id="contentBgLayer3">
        <div id="content_wrapper">
          <div id="breadcrumb">
	    Breadcrumb
            <div class="clear"></div>
          </div>
	  <div id="content">
            <div class="content_twoCols content_twoCols-20-80">
              <div class="content_twoCols_left">
		<ul class="subnavi top">
		  <li><a>Mitgliederbereich</a></li>
		  <li><%= link_to "Alle Benutzer auflisten", { :controller => "users" }, { :class => (action_name == "index" ? "active" : "" ) } %></li>
		</ul>
              </div>
              <div class="content_twoCols_right">

           	<%= convert_to_content_box { yield } %>

              </div>
              &nbsp;
              <div class="clear"></div>
            </div>
          </div>
	</div>
      </div>
    </div>
  </div>

  <div id="footer">
    <div id="footer_bg"></div>
    <div id="footer_navi">
      <ul>
	    <li><a>Impressum</a></li>
      </ul>
      <div class="clear"></div>
    </div>
    <div id="footer_line"></div>
  </div>

</body>
</html>
