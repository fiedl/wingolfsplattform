var target = ".section.<%= escape_javascript(params[:section]) %> .add_button";


// Create a new relationships list item
created_profile_field_li = $( "<%= j(render partial: 'shared/profile_field', object: @profile_field)  %>");

// Insert this new list item as the last one in the section of the list items
// that can be seen also when not in edit_mode.
$( target).prev("ul").append(created_profile_field_li);

// Add all methods and triggers that are needed for the edit mode to the new
// elements.
created_profile_field_li.apply_edit_mode();

// And finally, trigger the edit_mode in order to make the new entry be shown
// as text fields.
created_profile_field_li.find( ".editable" ).trigger( "edit" );

// Set the focus to the first field
created_profile_field_li.find( "input[name='who_by_title']" ).focus();
